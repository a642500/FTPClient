<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <Text text="Welcome" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" GridPane.valignment="CENTER" />

        <Label text="User Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />

        <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" />

        <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

        <PasswordField fx:id="passwordField" GridPane.columnIndex="2" GridPane.rowIndex="2" />

        <Button text="Login" GridPane.columnIndex="2" GridPane.rowIndex="5" />
        <CheckBox onAction="#onAnonymousChecked" text="anonymous" GridPane.rowIndex="5" />
        <Label text="Host" GridPane.rowIndex="3" />
        <Label text="Port" GridPane.rowIndex="4" />
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="3" />
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="4" />
    </children>
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

</GridPane>
